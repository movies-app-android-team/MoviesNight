<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/savedMoviesFragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".fragment.SavedMoviesFragment">

    <TextView
        android:id="@+id/myBookmarksTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Bookmarks"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="27sp"
        android:textStyle="bold"
        android:fontFamily="@font/red_hat_display"
        android:textColor="@color/white"
        android:layout_margin="30dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myBookmarksTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"
        tools:background="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>